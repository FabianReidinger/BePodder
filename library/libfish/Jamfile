
SubDir TOP libfish ;

if $(OSPLAT) = X86 {
	C++FLAGS += -Wno-sign-compare -Wno-overloaded-virtual ;
} 


SAVED_DEFINES = $(DEFINES) ;

DEFINES = $(SAVED_DEFINES) ;


SubDirSysHdrs /boot/home/config/include ; 
SubDirSysHdrs $(TOP)/libfish/include ;
SubDirSysHdrs $(TOP)/libfunky/include ;
SubDirSysHdrs /boot/beos/etc/develop/zeta-r1-gcc2-x86/headers/be/locale ;
SubDirSysHdrs $(TOP)/../include ;
SubDirSysHdrs $(TOP)/../include/r5-only ;
	
LINKFLAGS += -L/boot/home/config/lib ;
LINKFLAGS += -L$(TOP)/libs ;
LINKFLAGS += -L/boot/develop/headers/be ; 

#<pe-src>
StaticLibrary libfish.a : 
	BoxRenderer.cpp
	CompositeRenderer.cpp
	ImageRenderer.cpp
	OneSView.cpp
	ParBoxRenderer.cpp
	SView.cpp
	TitleBoxRenderer.cpp
	HelpViewer.cpp
	;
#	</pe-src>

